{
  "name": "stage",
  "description": "The staging environment",
  "cookbook_versions": {
    "et_storm_nimbus": "= 1.0.3",
    "et_storm_supervisor": "= 1.0.4",
    "storm": "= 2.0.3"
  },
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "default_attributes": {
  },
  "override_attributes": {
    "chef_env_long_name": "staging",
    "newrelic": {
      "agent_enabled": false
    },
    "ops_haproxy": {
      "acls": {
        "host_logs": {
          "type": "hdr_beg(host)",
          "match": "stage-logs.evertrue.com"
        },
        "host_storm": {
          "type": "hdr_beg(host)",
          "match": "stage-storm.evertrue.com"
        }
      },
      "frontends": {
        "main": {
          "port": "8080",
          "ssl": false
        },
        "main_ssl": {
          "port": "8443",
          "ssl": true
        }
      },
      "applications": {
        "logs": {
          "acls": [
            [
              "host_logs"
            ]
          ],
          "ssl_enabled": false,
          "ssl_required": false,
          "backend": "logs"
        },
        "storm": {
          "acls": [
            [
              "host_storm"
            ]
          ],
          "access_control": true,
          "allowed": {
            "host_groups": [
              "set_global",
              "eips",
              "instance_ext_ips"
            ]
          },
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "storm_nimbus"
        }
      },
      "backends": {
        "logs": {
          "balance_algorithm": "roundrobin",
          "servers_recipe": "logserver",
          "port": "80"
        },
        "storm_nimbus": {
          "servers_recipe": "et_storm_nimbus",
          "port": "8080"
        }
      }
    },
    "api_haproxy": {
      "acls": {
        "host_stage-api": {
          "type": "hdr_beg(host)",
          "match": "stage-api.evertrue.com"
        },
        "uri_search": {
          "type": "path_beg",
          "match": "/search"
        },
        "uri_contacts": {
          "type": "path_beg",
          "match": "/contacts"
        },
        "uri_reds": {
          "type": "path_beg",
          "match": "/reds"
        },
        "uri_auth": {
          "type": "path_beg",
          "match": "/auth"
        },
        "uri_reporting": {
          "type": "path_beg",
          "match": "/reporting"
        },
        "uri_lids": {
          "type": "path_beg",
          "match": "/lids"
        },
        "uri_importer": {
          "type": "path_beg",
          "match": "/importer"
        },
        "uri_10": {
          "type": "path_beg",
          "match": "/1.0"
        },
        "uri_01": {
          "type": "path_beg",
          "match": "/0.1"
        },
        "uri_ping": {
          "type": "path_beg",
          "match": "/ping"
        },
        "uri_docs": {
          "type": "path_beg",
          "match": "/docs"
        },
        "uri_tools": {
          "type": "path_beg",
          "match": "/tools"
        }
      },
      "frontends": {
        "main": {
          "port": "8080",
          "ssl": false
        },
        "main_ssl": {
          "port": "8443",
          "ssl": true
        }
      },
      "applications": {
        "searchapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_search"
            ]
          ],
          "endpoint": "stage-searchapi.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "searchapi-stage"
        },
        "contactsapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_contacts"
            ]
          ],
          "endpoint": "stage-contactsapi.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "contactsapi-stage"
        },
        "redsapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_reds"
            ]
          ],
          "endpoint": "stage-reds.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "redsapi-stage"
        },
        "authapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_auth"
            ]
          ],
          "endpoint": "stage-auth.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "authapi-stage"
        },
        "reportingapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_reporting"
            ]
          ],
          "endpoint": "stage-reporting.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "reportingapi-stage"
        },
        "lidsapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_lids"
            ]
          ],
          "endpoint": "stage-lids.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "lidsapi-stage"
        },
        "importerapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_importer"
            ]
          ],
          "endpoint": "stage-importer.evertrue.com",
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "importerapi-stage"
        },
        "legacyapi-stage": {
          "acls": [
            [
              "host_stage-api",
              "uri_10"
            ],
            [
              "host_stage-api",
              "uri_01"
            ],
            [
              "host_stage-api",
              "uri_ping"
            ],
            [
              "host_stage-api",
              "uri_docs"
            ],
            [
              "host_stage-api",
              "uri_tools"
            ]
          ],
          "ssl_enabled": true,
          "ssl_required": true,
          "backend": "legacyapi-stage"
        }
      },
      "backends": {
        "searchapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/search/"
          },
          "port": "8080",
          "servers_recipe": "et_search_api"
        },
        "contactsapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/contacts/"
          },
          "port": "8080",
          "servers_recipe": "et_contacts_api"
        },
        "redsapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/reds/",
            "always": true
          },
          "port": "8080",
          "servers_recipe": "et_reds_api"
        },
        "authapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/auth/",
            "always": true
          },
          "port": "8080",
          "servers_recipe": "et_auth_api"
        },
        "reportingapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/reporting/",
            "always": true
          },
          "port": "8080",
          "servers_recipe": "et_reporting_api"
        },
        "lidsapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/lids/",
            "always": true
          },
          "port": "8080",
          "servers_recipe": "et_lids_api"
        },
        "importerapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "method": "OPTIONS",
            "url": "/importer/",
            "always": true
          },
          "port": "8080",
          "servers_recipe": "et_importer_api"
        },
        "legacyapi-stage": {
          "balance_algorithm": "roundrobin",
          "check_req": {
            "always": true
          },
          "servers": [
            {
              "name": "stage-api-1",
              "fqdn": "stage-api-1.priv.evertrue.com",
              "port": "8080"
            }
          ]
        }
      }
    },
    "rds_s3_backups": {
      "rds_instance_id": "stage-etdb",
      "rds_sec_groups": "sg-e77db088",
      "rds_subnet_group": "stage-private"
    }
  }
}
